medida = float(input('Uma distância em metros: '))
km = medida / 1000
hm = medida / 100
dam = medida / 10
dm = medida * 10
cm = medida * 100
mm = medida * 1000
print("A medida de  m é {}".format(medida))
print("cm: {}".format(cm))
print("mm: {}".format(mm))
print("dm: {}".format(dm))
print("dam: {}".format(dam))
print("hm: {}".format(hm))
print("km: {}".format(km))
